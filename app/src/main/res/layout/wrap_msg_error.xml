<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrap_msg_error"
    style="@style/wrap_msg_error"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wrap_msg_error"
    android:orientation="horizontal">

    <com.joanzapata.iconify.widget.IconTextView
        style="@style/fa_base.error"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/fa_exclamation"/>

    <TextView
        android:id="@+id/wrap_msg_error_text"
        style="@style/wrap_content_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>